{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.2.0",
  "author": "Tim Pollandt <pollti@gmx.net>",

  "applications": {
    "gecko": {
      "id": "newtabhere@pollti",
      "strict_min_version": "57.0a1"
    }
  },

  "description": "__MSG_extensionDescription__",
  "homepage_url": "https:/github.com/pollti/NewTabHere",

  "icons": {
    "48": "icons/logo.svg",
    "96": "icons/logo.svg"
  },

  "permissions": [
    "menus",
    "tabs",
    "storage"
  ],

  "background": {
      "scripts": ["src/background.js"]
  },

  "commands": {
    "new-tab-here": {
      "suggested_key": {
        "default": "Ctrl+Y"
      },
      "description": "__MSG_keyboardDescNewTabAtCurrPos__"
    }
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "icons/logo.svg"
    },
    "theme_icons": [{
      "light": "icons/logo-light.svg",
      "dark": "icons/logo.svg",
      "size": 48
    }],
    "default_title": "__MSG_NewTabHereButtonCaption__",
    "default_area": "tabstrip"
  },

  "options_ui": {
    "open_in_tab": false,
    "browser_style": true,
    "page": "opt/options.html"
  },

  "default_locale": "en"
}
